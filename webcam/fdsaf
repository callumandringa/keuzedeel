const int buttonPin = 2;

int buttonState = 0;



void setup() {
  Serial.begin(115200);
  pinMode(buttonPin, INPUT);
}

void loop() {
  buttonState = digitalRead(buttonPin);

  if (buttonState == HIGH) {
    delay(2000);  // Wait for 5 seconds to debounce the button and avoid multiple triggers

    Serial.println("<hoi>");
  }

  // Add any other code you need to run repeatedly here
}